    def request_file(self):
        global rrq
        rrq = bytearray()
        rrq.append(0)
        rrq.append(1)
        filename = b'rodaina'
        rrq = rrq + filename
        rrq.append(0)
        mode = b'octet'
        rrq = rrq + mode


    def upload_file(self):

        #sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
        #server_address = ("127.0.0.1", 69)
        global wrq
        wrq= bytearray()
        wrq.append(0)
        wrq.append(2)
        filename=b'rodaina'
        wrq=wrq+filename
        wrq.append(0)
        mode=b'octet'
        wrq=wrq+mode


def main():

    # Create a UDP socket
    sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)

    server_address = ("127.0.0.1", 69)
    #message = b'This is the message.  It will be repeated.'
    object=TftpProcessor()
    #TftpProcessor.upload_file(object)
    TftpProcessor.request_file(object)

    try:

        # Send data
        #print('sending {!r}'.format(message))
        sent = sock.sendto(rrq, server_address)

        # Receive response
        print('waiting to receive')
        data, server = sock.recvfrom(4096)
        print('received {!r}'.format(data))

    finally:
        print('closing socket')
        sock.close()
    pass

if __name__ == "__main__":
    main()
