def get_arg(param_index, default=None):
    """
        Gets a command line argument by index (note: index starts from 1)
        If the argument is not supplies, it tries to use a default value.
        If a default value isn't supplied, an error message is printed
        and terminates the program.
    """
    try:
        return sys.argv[param_index]
    except IndexError as e:
        if default:
            return default
        else:
            print(e)
            print(
                f"[FATAL] The comamnd-line argument #[{param_index}] is missing")
            exit(-1)    # Program execution failed.


def main():

    # Create a UDP socket
    sock = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)

    server_address = ("127.0.0.1", 69)
    object = TftpProcessor()
    global operation
    operation=input('Enter the operation you want to do: ')
    if operation=='upload':
        TftpProcessor.upload_file(object)
        request=wrq
    else:
        TftpProcessor.request_file(object)
        request=rrq



    try:

        # Send data
        #print('sending {!r}'.format(message))
        sent = sock.sendto(request, server_address)
        # Receive response
        print('waiting to receive')
        data,server = sock.recvfrom(512)
        print('received {!r}'.format(data))
        TftpProcessor.process_udp_packet(object,data,server)


    finally:
        print('closing socket')
        sock.close()
    pass

if __name__ == "__main__":
    main()
